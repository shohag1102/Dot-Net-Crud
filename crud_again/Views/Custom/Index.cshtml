@{
    ViewData["Title"] = "Custom Page";
}
@model List<crud_again.Models.Customer>

<form asp-controller="Custom" asp-action="CreateCustomer" method="post">

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Your Name">
    </div>

    <div class="form-group">
        <label for="Age">Age</label>
        <input type="text" class="form-control" id="Age" name="Age" placeholder="Enter Your Age">
    </div>
    <br></br>
    <button type="submit" class="btn btn-primary">Save Data</button>
</form>

<br></br>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>
                    <form asp-controller="Custom" asp-action="UpdateCustomer" method="post">

                        <input type="text" class="form-control" id="Id" name="Id" value="@item.Id" hidden>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@item.Name">
                        </div>

                        <div class="form-group">
                            <label for="Age">Age</label>
                            <input type="text" class="form-control" id="Age" name="Age" value="@item.Age">
                        </div>

                        <button type="submit" class="btn btn-warning">Update</button>
                    </form>
                    <form asp-controller="Custom" asp-action="DeleteCustomer" method="post">

                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Your Name">
                        </div>


                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
